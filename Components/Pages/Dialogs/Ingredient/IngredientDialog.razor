<MessageComponent Errors="ViewModel.Errors" SuccessMessages="ViewModel.SuccessMessages" IsBusy="ViewModel.IsBusy" />

<MudDialog>
   <DialogContent>
      <MudItem Style="width: 500px">
         <MudItem>
                <MudText>Name</MudText>
                <MudInput style="width: 100%" HelperText="Name" Variant="Variant.Filled" @bind-Value="mIngredientModel.Name" />
         </MudItem>

            <MudItem Style="margin-top: 10px">
                <MudText>Description</MudText>
                <MudInput style="width: 100%" Lines="3" HelperText="Description" Variant="Variant.Filled" @bind-Value="mIngredientModel.Description" />
            </MudItem>

            <MudItem Style="margin-top: 10px">
                <MudCheckBox @bind-Value="mIngredientModel.Checkstock">Check For Stock in Recipes</MudCheckBox>
            </MudItem>

            <MudItem Style="margin-top: 10px">
                <MudText>Nutritional values (100g)</MudText>
                <MudStack Row="true">
                   <MudItem>
                        <MudText>Calories</MudText>
                        <MudInput style="width: 100%" HelperText="Calories" Variant="Variant.Filled" @bind-Value="mIngredientModel.KcalPerHundredGrams" />
                   </MudItem>
                    <MudItem>
                        <MudText>Carbs</MudText>
                        <MudInput style="width: 100%" HelperText="Carbs" Variant="Variant.Filled" @bind-Value="mIngredientModel.CarbsPerHundredGrams" />
                    </MudItem>
                    <MudItem>
                        <MudText>Proteins</MudText>
                        <MudInput style="width: 100%" HelperText="Proteins" Variant="Variant.Filled" @bind-Value="mIngredientModel.ProteinPerHundredGrams" />
                    </MudItem>
                    <MudItem>
                        <MudText>Fats</MudText>
                        <MudInput style="width: 100%" HelperText="Fats" Variant="Variant.Filled" @bind-Value="mIngredientModel.FatsPerHundredGrams" />
                    </MudItem>
                </MudStack>
            </MudItem>
            
            <MudItem Style="margin-top: 10px">
                <MudText>Weight of 1dl of the ingredient (for example flour)</MudText>
                <MudTextField FullWidth="true" Variant="Variant.Filled" @bind-Value="mIngredientModel.WeightOfOneHundredMilliliters"/>
            </MudItem>

            <MudItem Style="margin-top: 10px">
                <MudText>Weight of 1 qty of the ingredient (for example eggs)</MudText>
                <MudTextField FullWidth="true" Variant="Variant.Filled" @bind-Value="mIngredientModel.WeightOfOneQuantity" />
            </MudItem>

         <MudStack Style="margin-top: 20px" Row="true">
               @if (mNewIngredient)
               {
                  <MudButton @onclick="async () => await Add()" Variant="Variant.Filled" Color="Color.Success" FullWidth="true">Add</MudButton>
               }
               else
               {
                  <MudButton @onclick="async () => await Update()" Variant="Variant.Filled" Color="Color.Success" FullWidth="true">Update</MudButton>
                  <MudButton @onclick="async () => await Delete()" Variant="Variant.Filled" Color="Color.Error" FullWidth="true">Delete</MudButton>
               }
               <MudButton @onclick="Cancel" Variant="Variant.Filled" Color="Color.Warning" FullWidth="true">Cancel</MudButton>
         </MudStack>
      </MudItem>
   </DialogContent>
</MudDialog>

