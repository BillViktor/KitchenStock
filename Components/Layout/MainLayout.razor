@inherits LayoutComponentBase

<MudThemeProvider Theme="mCustomTheme" IsDarkMode="mDarkMode" />
<MudSnackbarProvider  />
<MudDialogProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
       <MudImage Height="24" Src="favicon.png"/>
        <MudText Typo="Typo.h5" Class="ml-3">KitchenStock</MudText>
        <MudSpacer/>
        <MudItem Class="d-flex row align-center">
           <MudIcon Style="margin-right: 5px" Icon="@Icons.Material.Filled.LightMode"/>
            <MudSwitch @onclick="async () => await DarkModeToggle()" Value="mDarkMode" Color="Color.Primary" />
            <MudIcon Style="margin-left: -15px" Icon="@Icons.Material.Filled.DarkMode" />
        </MudItem>
    </MudAppBar>
    <MudDrawer @bind-Open="mDraweropen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>